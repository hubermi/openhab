<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="etapu" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="etapu">
		<label>ETA PelletsUnit</label>
		<description>EtaPU Binding das alle verfügbaren Daten der REST API ausliest.</description>

		<channels>
			<channel id="kesselstatus" typeId="kesselstatus"  />
			<channel id="heizkreisstatus" typeId="heizkreisstatus" />
			<channel id="stoermeldung" typeId="stoermeldung" />
			<channel id="entaschentaste" typeId="entaschentaste" />
			<channel id="entaschennachfruehestens" typeId="entaschennachfruehestens" />
			<channel id="entaschennachspaetestens" typeId="entaschennachspaetestens" />
			<channel id="kuebelleerennach" typeId="kuebelleerennach" />
			<channel id="silovorrat" typeId="silovorrat" />
			<channel id="kesselpelletsvorrat" typeId="kesselpelletsvorrat" />
			<channel id="kesselpelletsfuellen" typeId="kesselpelletsfuellen" />
			<channel id="betriebssekunden" typeId="betriebssekunden" />
			<channel id="gesamtverbrauch" typeId="gesamtverbrauch" />
			<channel id="kgseitwartung" typeId="kgseitwartung" />
			<channel id="kgseitentaschung" typeId="kgseitentaschung" />
			<channel id="hksolltemperatur" typeId="hksolltemperatur" />
			<channel id="hkvorlaufminus10" typeId="hkvorlaufminus10" />
			<channel id="hkvorlaufplus10" typeId="hkvorlaufplus10" />
			<channel id="hkvorlaufabsenkung" typeId="hkvorlaufabsenkung" />
			<channel id="heizgrenzetag" typeId="heizgrenzetag" />
			<channel id="heizgrenzenacht" typeId="heizgrenzenacht" />
			<channel id="aussentemperatur" typeId="aussentemperatur" />
		</channels>

		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<label>IP Address</label>
				<description>IP Address of the ETA PU API interface</description>
				<default></default>
			</parameter>
			<parameter name="refreshInterval" type="integer" required="true">
				<label>Refresh Interval</label>
				<description>States how often the information is polled (in seconds).</description>
				<default>60</default>
			</parameter>
		</config-description>
	</thing-type>


	<channel-type id="kesselstatus">
		<item-type>String</item-type>
		<label>Kesselstatus</label>
		<description>Der aktuelle Status des Kessels</description>
		<state readOnly="true" />
	</channel-type>

	<channel-type id="heizkreisstatus">
		<item-type>String</item-type>
		<label>Heizkreis Status</label>
		<description>Der aktuelle Status des Heizkreises</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="stoermeldung">
		<item-type>String</item-type>
		<label>Stoermeldungen</label>
		<description>Stoermeldungen wie Wasserdruck zu niedrig, Aschebox leeren.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="entaschentaste">
		<item-type>String</item-type>
		<label>Entaschung</label>
		<description>Zeigt ob gerade entascht wird.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="entaschennachfruehestens">
		<item-type>Number</item-type>
		<label>Entaschen nach min.</label>
		<description>Frühestens nach x kg wird entascht.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="entaschennachspaetestens">
		<item-type>Number</item-type>
		<label>Entaschen nach max.</label>
		<description>Spätestens nach x kg wird entascht.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="kuebelleerennach">
		<item-type>Number</item-type>
		<label>Aschebox leeren nach</label>
		<description>Aschebox muss spätestens nach x kg geleert werden.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="silovorrat">
		<item-type>Number</item-type>
		<label>Lagervorrat</label>
		<description>Pellets in kg im Pelletslager.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="kesselpelletsvorrat">
		<item-type>Number</item-type>
		<label>Behälterinhalt</label>
		<description>Pellets in kg im Pelletskessel.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="kesselpelletsfuellen">
		<item-type>String</item-type>
		<label>Behälter füllen</label>
		<description>Wird der Pelletsbehälter im Kessel gerade befüllt.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="betriebssekunden">
		<item-type>String</item-type>
		<label>Betriebssekunden</label>
		<description>Betriebszeit in Sekunden.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="gesamtverbrauch">
		<item-type>Number</item-type>
		<label>Gesamtverbrauch Pellets</label>
		<description>Gesamtverbrauch an Pellets in kg seit Inbetriebnahme.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="kgseitwartung">
		<item-type>Number</item-type>
		<label>Verbrauch seit Wartung</label>
		<description>Pelletsverbrauch seit der letzten Wartung.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="kgseitentaschung">
		<item-type>Number</item-type>
		<label>Pelletsverbrauch seit der letzten Entaschung.</label>
		<description>Zeigt den aktuellen Status des Kessels</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="hksolltemperatur">
		<item-type>Number</item-type>
		<label>Vorlauf</label>
		<description>Solltemperatur des Heizkreises.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="hkvorlaufminus10">
		<item-type>Number</item-type>
		<label>Vorlauftemperatur bei -10°</label>
		<description>Vorgabe für Vorlauftemperatur bei -10°</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="hkvorlaufplus10">
		<item-type>Number</item-type>
		<label>Vorlauftemperatur bei +10°</label>
		<description>Vorgabe für Vorlauftemperatur bei +10°</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="hkvorlaufabsenkung">
		<item-type>Number</item-type>
		<label>Vorlauf Absenkung</label>
		<description>Absenkung des Vorlaufs in °C.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="heizgrenzetag">
		<item-type>Number</item-type>
		<label>Heizgrenze Tag</label>
		<description>Heizgrenze in °C am Tag.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="heizgrenzenacht">
		<item-type>Number</item-type>
		<label>Heizgrenze Nacht</label>
		<description>Heizgrenze in °C in der Nacht.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="aussentemperatur">
		<item-type>Number</item-type>
		<label>Aussentemperatur</label>
		<description>Gemessene Aussentemperatur.</description>
		<state readOnly="true" />
	</channel-type>

</thing:thing-descriptions>
